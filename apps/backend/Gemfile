source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby "3.1.0"

# core Rails framework
gem "rails", "~> 7.0.4", ">= 7.0.4.3"

# postgreSQL database adapter
gem "pg", "~> 1.1"

# production-ready web server
gem "puma", "~> 5.0"

# speeds up boot time by caching require paths
gem "bootsnap", require: false

# loads environment variables from .env files
gem "dotenv-rails"

# behavior-driven testing framework
gem "rspec-rails"

# linting and security tools
gem "rubocop", require: false
gem "rubocop-rails", require: false
gem "brakeman", require: false           # static analysis for security vulnerabilities
gem "bundler-audit", require: false      # checks for vulnerable gem versions

# support for Windows time zone data (safe to include cross-platform)
gem "tzinfo-data", platforms: %i[ mingw mswin x64_mingw jruby ]

gem 'rack-cors'

group :development, :test do
  # built-in debugger for Ruby
  gem "debug", platforms: %i[ mri mingw x64_mingw ]
end
